@model UrlShortener.Models.UrlModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>UrlModel</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="control-group">
            @Html.LabelFor(model => model.Key, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.Key)
                @Html.ValidationMessageFor(model => model.Key, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Url, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.Url)
                @Html.ValidationMessageFor(model => model.Url, null, new { @class = "help-inline" })
            </div>
        </div>
        
        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", MVC.Url.Index())
</div>

