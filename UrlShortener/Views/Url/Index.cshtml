@model IEnumerable<UrlShortener.Models.UrlModel>

@{
    ViewBag.Title = "Urls";
}

<h2>Urls</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model=>model.Id)</th>
        <th>@Html.DisplayNameFor(model=>model.Key)</th>
        <th>@Html.DisplayNameFor(model=>model.Url)</th>
        <th>@Html.DisplayNameFor(model=>model.VisitCount)</th>
    </tr>
    
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem=>item.Id)</td>
        <td>@Html.DisplayFor(modelItem=>item.Key)</td>
        <td>@Html.DisplayFor(modelItem=>item.Url)</td>
        <td>@Html.DisplayFor(modelItem=>item.VisitCount)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) | 
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>

